<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.korchid.msg.InviteActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/layout_border"
            android:layout_height="60dp">

            <Button
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:id="@+id/back"
                android:background="@drawable/back"
                android:layout_width="40dp" />

            <TextView
                android:text="Confirmation"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Invite parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_inviteParent"
                android:layout_weight="1" />

            <Button
                android:text="Invite Child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_inviteChild"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="Invite parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_role" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/et_phoneNumber"
                android:layout_weight="1"
                android:hint="010-0000-0000"
                android:gravity="right"/>

            <Button
                android:text="send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_send"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:text="Contact List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_contactList"
            android:layout_above="@+id/mNumber"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</RelativeLayout>
