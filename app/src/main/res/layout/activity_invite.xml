<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.korchid.msg.activity.InviteActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="부모님 초대"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_inviteParent"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

        <Button
            android:text="자녀 초대"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_inviteChild"
            android:layout_weight="1"
            android:background="@color/colorTransparent" />
    </LinearLayout>

    <TextView
        android:text="Invite parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_role" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_nickname"
            android:hint="Name"
            android:gravity="right"
            android:layout_width="73dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phoneNumber"
            android:hint="010-0000-0000"
            android:gravity="right"
            android:layout_weight="1" />

        <Button
            android:text="주소록에서추가"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_contactList"
            android:layout_above="@+id/mNumber"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <Button
        android:text="send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send"
        android:background="@color/colorTransparent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:text="Kakao Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_kakaoLink"
        android:background="@color/colorPrimary" />

</LinearLayout>
