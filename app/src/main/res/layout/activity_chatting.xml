<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/slidingPanel"
        android:background="@android:color/holo_purple"
        android:visibility="visible"
        android:layout_width="200dp">

        <ImageView
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView2">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:background="@android:color/holo_purple"
            android:weightSum="1"
            android:layout_weight="0.2">

            <Button
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:id="@+id/menu"
                android:layout_weight="0.2"
                android:background="@drawable/menu" />

            <Space android:layout_height="match_parent"
                android:layout_width="270dp"
                android:layout_weight="0.6"/>

            <Button
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:id="@+id/setting"
                android:background="@drawable/setting3"
                android:layout_weight="0.2"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/size"
        android:layout_weight="0.2"
        android:weightSum="1"
            android:layout_height="350dp">

        <ListView
            android:id="@+id/messageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transcriptMode="alwaysScroll"
            android:divider="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1.36" />
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@android:color/background_light"
            android:layout_weight="0.2">

        <Button
            android:id="@+id/plus"
            android:background="@drawable/plus"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_width="46dp" />

        <EditText
            android:id="@+id/publishEditView"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:inputType="text"
            android:ems="10"
            android:layout_weight="0.8">
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/publishButton"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/plane" />

    </LinearLayout>

        <GridLayout
            android:id="@+id/expandedMenu"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_weight="0.1"
            android:columnCount="3"
            android:rowCount="2"
            android:orientation="horizontal"
            android:visibility="gone"
            >
                <Button android:text="Image"/>
                <Button android:text="Video"/>
                <Button android:text="Camera"/>
                <Button android:text="Present"/>
                <Button android:text="Contact"/>
                <Button android:text="File"/>
                <Button android:text="Map"/>
        </GridLayout>

    </LinearLayout>

</FrameLayout>